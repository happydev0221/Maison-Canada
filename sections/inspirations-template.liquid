    {
            "type": "image_picker",
            "id": "banner_desktop",
            "label": "Image",
            "info": "800 x 800px recommended"
    },
   	{
          "type": "text",
          "id": "content_text",
          "label": "Heading",
		  "default": "COLLECTIONS IN THE FIRST"

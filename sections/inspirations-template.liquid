    },
	{
          "type": "text",
          "id": "banner_sub",
          "label": "Banner Subheading",
		  "default": "Absolutely magical"
    },
	{
          "type": "richtext",
          "id": "banner_desc",
          "label": "Description"
    },
	{
          "type": "text",
          "id": "banner_btn",
          "label": "Button",
		  "default": "I absolutely test"
    },
	{
      "type": "url",
      "id": "banner_link",
      "label": "Link"
    }


],

   "blocks": [
      {
        "type": "grid",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "grid_image",
            "label": "Image",
            "info": "800 x 800px recommended"
          },
          {
            "type": "text",
            "id": "grid_head",
            "label": "Heading"
          },
  		  {
            "type": "text",
            "id": "grid_sub",
            "label": "Subheading"
          },
 			{
            "type": "richtext",
            "id": "grid_desc",
            "label": "Description"
          },
		  {
            "type": "text",
            "id": "grid_btn",
            "label": "Button"
          },
  		  {
            "type": "url",
            "id": "grid_link",
            "label": "Link"
          },
    {
      "type": "select",
      "id": "grid_position",
      "label": "Alignment",
      "options": [
        {
          "value": "text-position-left",
          "label": "Left"
        },
        {
          "value": "text-position-right",
          "label": "Right"
        }
      ],
      "default": "text-position-right"
    }
			
			

      {% render 'image-element',
              image: section.settings.logo_mobile,
              alt: shop.name,
              back_to_basics: true
      %}
    {% elsif section.settings.logo != blank %}
      {% render 'image-element',
              image: section.settings.logo,
              alt: shop.name,
              back_to_basics: true
      %}

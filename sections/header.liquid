                          </div>
                          <div class="buttons"> <a href="{{section.settings.banner_url2}}" class="btn btn-white">{{section.settings.banner_btntext2}}</a></div>
                        </div>
                      </div>
                    </div>
                  
                  {% elsif link.handle == 'collections'%}
                    <div class="mega-content">
                      <div class="main-col col-layout-2 col-collections">                        
                        <div>
                          <ul>
                          <li><a href="/collections"><ly-as-307483>Explore All</ly-as-307483></a></li>
                          </ul>
                        </div>
                        <div class="bl">
                          <ul class="collections-mega">
                            {% for link in linklists[link.handle].links %}
                              {% if link.url contains 'collections'%}
                                {% assign colhandle = link.url | replace: "/collections/", "" | replace: request.locale.root_url, '' %}
                                {% if link.url == 'aroma'%}
                                  {% assign colhandle = 'aroma1' %}
                                {%endif%}
                            
                                {% assign collection = collections[colhandle] %}
                                {% if collection.image %}
                                  <li>
                                    <a href="{{link.url}}" class="how-right">
                                      <div class="img-col">
                                        <img src="{{ collection.image.src | collection_img_url: 'small' }}" alt="{{ collection.image.alt }}" >
                                        <span class="find_me" style="display: none;">{{ collection.image.src }} || {{ collection.image }} || {{ colhandle }}</span>
                                      </div>
                                      <span class="title">{{link.title}}</span>
                                    </a>
                                  </li>
                                {% endif %}
                              {%endif%}
                            {%endfor%}
                          </ul>
                        </div>
                      </div>
                    </div>

                  {% elsif link.handle == 'gifts' %}
                    <div class="mega-content">
                      <div class="main-col col-layout-2">  
                        <div class="block-links">
                          <ul>
                            <li><a href="/collections/all"><ly-as-307483>Explore All</ly-as-307483></a></li>
                            {% for link in linklists[link.handle].links limit:5 %}
                              <li><a href="{{link.url}}">{{link.title}}</a></li>
                            {%endfor%}
                          </ul>
                        </div>
                        <div class="block-links">
                          <ul>
                            {% for link in linklists[link.handle].links limit:5 offset:5 %}
                              <li><a href="{{link.url}}">{{link.title}}</a></li>
                            {%endfor%}
                          </ul>
                        </div>
                  
                        <div class="block-links">
                          <a href="/">
                            <img src="{{section.settings.banner3_img |img_url:'400x'}}" width="400">
                          </a>
                        </div>
                      </div>          
                    </div>

                  {% else %}
                    <div class="dropdown-links">
                      <ul>
                        {%- assign count = 0 -%}
                        {%- assign split = false -%}

                        {% for sub_link in link.links %}
                          {%- assign count = count | plus: 1 -%}

                          <li><a href="{{ sub_link.url }}">{{ sub_link.title }}</a></li>

                          {% for sub_sub_link in sub_link.links %}
                            {%- assign count = count | plus: 1 -%}

                            <li>
                              <a class="sub-link" href="{{ sub_sub_link.url }}">{{ sub_sub_link.title }}</a>
                            </li>
                          {% endfor %}

                          {% if count >= column_threshold and split == false %}
                            {%- assign split = true -%}
                            </ul>
                            <ul>
                          {% endif %}
                        {% endfor %}
                      </ul>
                    </div>  
                  {% endif %}
                </div>
              </li>
            {% endif %}
          {% endfor %}
        </ul>

        {% comment %} <ul class="header__secondary-navigation menu right" data-header-secondary-navigation>
          {% if currency_selector == true or locale_selector == true %}
            <li class="currencies">
              {% render 'localization-switcher',
                      additional_classes: 'header-menu__disclosure',
                      id: 'header__selector-form',
                      currency_selector: currency_selector,
                      locale_selector: locale_selector
              %}
            </li>
          {% endif %}

          {% if shop.customer_accounts_enabled %}
            <li class="header-account">
              <a href="{{ routes.account_url }}" title="{{ 'layout.customer.my_account' | t }} {% if customer %}({{ customer.email }}){% endif %}">{% if customer %}{{ 'layout.customer.my_account' | t }}{% else %}<span class="icon-user-icon"></span>{% endif %}</a>
            </li>
          {% endif %}

          <li class="cart">
            <a href="#cart" class="icon-cart cart-button"><span>{{ cart.item_count }}</span></a>
            <a href="{{ routes.cart_url }}" class="icon-cart cart-button no-js-only"><span>{{ cart.item_count }}</span></a>
          </li>
        </ul> {% endcomment %}
      </div>
    </div>
  </section>
</div>


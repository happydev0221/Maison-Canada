function sortObjectList(list, orderBy){
    list.sort(function(a, b){
        let byIndex = 0;
        let order = orderBy[byIndex];
        while(!a[order.by] || !b[order.by] || a[order.by] === b[order.by]){
            byIndex++;
            if(byIndex >= orderBy.length){break;}
            order = orderBy[byIndex];
        }
        if(!a[order.by] || !b[order.by] || a[order.by] === b[order.by]){
            return false;
        }
        if(order.desc){
            return a[order.by] < b[order.by];
        }
        return a[order.by] > b[order.by];
    });
    return list;
}

		function loadStores(lat, lng) {	
          
      
			var country = $('#map-form select option:selected').val();

          localStorage.setItem('ca_coords_lat', lat);
			localStorage.setItem('ca_coords_lng', lng);
			addLoader();
			window.loading_stores = true;
			$.ajax({
				url: window.storelocatorLangPath,
				success: function (res) {
					var result = JSON.parse(res);
                 
					if (result) {
                      
						var xd = result.data;
						var new_json = [];
						var lng_ar = 0;                      
						if (xd.length > 0) {
							for (var i = 0; i < xd.length; i++) {
								
								lng_ar = calcCrow(lat,lng,parseFloat(xd[i].latitude),parseFloat(xd[i].longitude)).toFixed(1);
								if(parseInt(lng_ar) <= 120){
                                    // console.log(lng_ar);
									
                                  new_json.push({
                                    "id": xd[i].id,
                                    "card_content": xd[i].card_content,
                                    "window_content": xd[i].window_content,
                                    "type": xd[i].type,
                                    "latitude": xd[i].latitude,
                                    "longitude": xd[i].longitude,
                                    "range": parseInt(lng_ar)
                                  });          
								}
							}
						}
                      
                      	new_json.sort(function(a,b){return new Date(a.range) - new Date(b.range)});
                      
						window.stores = new_json;
                      
					} else {
						window.stores = [];
					}

					generateItems();
					updateMap();
					handleFilterVisibility();
					window.loading_stores = false;
				},
				error: function () {
					window.stores = [];
					generateItems();
					updateMap();
					handleFilterVisibility();
					window.loading_stores = false;
				}
			})
		}

		function handleFilterVisibility() {
			var types = [];
			if (window.stores.length > 0) {
				for (var i = 0; i < window.stores.length; i++) {
					if (types.indexOf(window.stores[i].type) == "-1") {
						types.push(window.stores[i].type);
					}
				}
			}

			$('#filter li').hide();
			for (var a = 0; a < types.length; a++) {
				$('#filter li[data-type="' + types[a] + '"]').show();
			}
		}

		function updateMap() {
			window.infoWindow = new google.maps.InfoWindow({
				maxWidth: 390
			});
			for (var i = 0; i < window.stores.length; i++) {
              
            
				var point = new google.maps.LatLng(
					parseFloat(window.stores[i].latitude),
					parseFloat(window.stores[i].longitude)
				);

				var marker = new google.maps.Marker({
					map: window.storelocator,
					position: point,
					icon: {
						url: 'https://www.maison-berger.fr/medias/fr/wp-content/uploads/cdn/assets/ico-storelocator-' + window.stores[i].type + '.png'
					},
					content: window.stores[i].window_content
				});

				google.maps.event.addListener(marker, 'click', function () {
					if(!window.loading_stores) {
						window.infoWindow.setContent(this.content);
						window.storelocator.panTo(
							new google.maps.LatLng(this.position.lat(), this.position.lng())
						);
						window.infoWindow.open(window.storelocator, this);
					}
				});
              
				window.stores[i].marker = marker;
			}
		}

		function generateItems() {
			var target = $('#locations');
			var output = '';

			if (window.stores.length <= 0) {
				$('#no-results').addClass('visible');
				target.addClass('hidden');
			} else {
				$('#no-results').removeClass('visible');
				target.removeClass('hidden');
			}

			$.each(window.stores, function (index, item) {
              
             // console.log(item);
				if (index % 2 == 0) {
					output += '<div class="column">';
				}
				output += item.card_content;
				if (index % 2 == 1) {
					output += '</div>';
				}
			});
			$('#locations').remove();

			$('.block-storelocator > .container').append('<div id="locations">' + output + '</div>');

			setTimeout(function () {
				removeLoader();

				$('#locations').slick({
					dots: false,
					infinite: false,
					slidesToShow: 3,
					slidesToScroll: 3,
					initialSlide: 1,
					centerMode: true,
					arrows: true,
					draggable: false,
					variableWidth: false,
					centerPadding: '0',
					responsive: [{
							breakpoint: 1400,
							settings: {
								slidesToShow: 2
							}
						},
						{
							breakpoint: 930,
							settings: {
								slidesToShow: 1
							}
						},
